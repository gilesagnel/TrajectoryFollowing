<launch>
  <arg name="gui" value="true" />

  <!-- Gazebo  -->
  <include file="$(find robot_scenario)/launch/empty_world.launch">
    <arg name="gui" value="$(arg gui)" />
  </include>

  <!-- Robot with diff drive -->
  <include file="$(find robot_scenario)/launch/jetbot.gazebo.launch">
    <arg name="robot_name" value="r1" />
    <arg name="robot_position" value="-x 0.0 -y 0.0 -z 0.01 -R 0 -P 0 -Y +0.0" />
  </include>

  <!-- RVIZ -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find robot_scenario)/launch/model.rviz" />

  <include file="$(find jetbot_control)/launch/jetbot_controller_manager.launch" />
  <!-- A GUI controller to publish commands to topics -->
  <include file="$(find jetbot_control)/launch/jetbot_rqt_robot_steering.launch" />

  <rosparam command="load" file="$(find jetbot_control)/config/pid.yaml" ns="/" />

</launch>